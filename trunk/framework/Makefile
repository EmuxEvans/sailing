
all:
	cd src/skates; $(MAKE) $@
	cd tools; $(MAKE) $@
	cd test/skates; $(MAKE) $@

clean:
	cd src/skates; $(MAKE) $@
	cd tools; $(MAKE) $@
	cd test/skates; $(MAKE) $@

linux:
	cp -f Makefile.def.$@ Makefile.def

freebsd:
	cp -f Makefile.def.$@ Makefile.def

macosx:
	cp -f Makefile.def.$@ Makefile.def

